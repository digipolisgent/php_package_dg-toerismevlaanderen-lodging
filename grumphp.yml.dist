parameters:
    git_dir: .
    bin_dir: vendor/bin
    ascii: ~
    tasks:
        composer: ~
        git_blacklist:
            keywords:
                - "die("
                - "var_dump("
                - "exit;"
        phpcpd: ~
        phpcs: ~
        phpmd:
            whitelist_patterns:
                - /^src\/(.*)/
            ruleset:
                - phpmd.xml
        phpunit: ~
        phpversion:
            project: '7.2'
        securitychecker: ~
        xmllint: ~
        yamllint: ~
        git_commit_message:
            allow_empty_message: false
        git_branch_name:
            whitelist:
                Git-flow: /(master|develop|feature\/\d+|(release|hotfix)\/\d+\.\d+\.?\d*)/
